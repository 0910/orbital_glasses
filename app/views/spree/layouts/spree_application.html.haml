!!! Strict
%html
	%head
		%title Orbital
		= stylesheet_link_tag "store/all", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
		= javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyAoAqRFSg4SPOGlkeJumobsLgCYKIAAEM0&sensor=false"  
	%body{controller: controller_name, action: action_name}
		.container
			= render 'spree/shared/navigation'
			.row-fluid
				- flash.each do |name, msg|
					- if msg.is_a?(String) 
						%div{:class => "alert alert-#{name == :alert ? "error" : "success"}"}
						%a.close{"data-dismiss" => "alert"}
						= content_tag :div, msg, :id => "flash_#{name}"
			= yield
		.container
			#footer
				.row-fluid
					.span4
						= link_to('Sunglasses', types_path(:types => 'Sunglasses'))
						= link_to('Prescription', types_path(:types => 'Prescription'))
						= link_to('Watches', types_path(:types => 'Watches'))
						= link_to('Snowgoogles', types_path(:types => 'Snowgoogles'))
						.hr
					.span4
						= link_to('Home', root_path)
						= link_to('Team', teams_path)
						= link_to('Stores', stores_path)
						= link_to('News', notices_path)
						.hr
						.newsletter
					.span4
						= link_to('Contact', contacts_path)
						= link_to('About Orbital', )
						.hr
						%a.fb(href="https://www.facebook.com/orbitaleyewear")
						%a.tw(href="https://twitter.com/Orbitalvirtual")
				.row-fluid(style="margin-top:30px;")
					%a#gototop.top
				.row-fluid
					.footerinside
						%p 2013 ORBITAL. Todos los derechos reservados.
						%a.nuevediez 0910
				.row-fluid