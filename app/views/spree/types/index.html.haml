- @taxons.each do |tax|
  - if tax.parent_id.nil?
    .row-fluid.seriesnav
      %h1= tax.name
      %a#filters filtros
    .row-fluid.treemenu
      - @taxons.each do |tax_1|
        - if tax_1.parent_id == tax.id
          .span3
            %h4= tax_1.name
            - @taxons.each do |tax_2|
              - if tax_2.parent_id == tax_1.id
                = link_to(types_path(:types => tax_2.name)) do
                  = tax_2.name
                - @taxons.each do |tax_3|
                  - if tax_3.parent_id == tax_2.id
                    = tax_3.name
                    %br
    .row-fluid
      - @products.each do |product|
        .span3
          = link_to(product, class: 'box smallbox') do
            - unless product.images.empty?
              .ph
                = image_tag(product.images.first.attachment.url(:large))
              .over
                %h1= product.name
                %p ver detalle