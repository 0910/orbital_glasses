.toolbar
  %ul.actions
    %li#new_new_link
      = button_link_to 'New Notice', new_object_url, { :remote => true, :icon => 'add', :id => 'admin_new_notice' }
  %br.clear

%h1 Notices

#new_notice

%table.index#listing_notice
  %tr
    %th Title
    %th Link
    %th Image
    %th
  - @collection.each do |notice|
    %tr
      %td= notice.title
      %td= notice.url
      %td= image_tag(notice.image.attachment.url(:small)) if notice.image
      %td.actions
        = link_to_edit notice, :class => 'edit'
        &nbsp;
        = link_to_delete notice

= paginate @collection.page(params[:page])

