.toolbar
  %ul.actions
    %li#new_video_link
      = button_link_to 'New Video', new_object_url, { :remote => true, :icon => 'add', :id => 'admin_new_video' }
  %br.clear

%h1 Videos

#new_video

%table.index#listing_video
  %tr
    %th Title
    %th Link
    %th Image
    %th
  - @collection.each do |video|
    %tr
      %td= video.title
      %td= video.url
      %td
        - unless video.images.empty?
          = image_tag(video.images.first.attachment.url(:small))
      %td.actions
        = link_to_edit video, :class => 'edit'
        &nbsp;
        = link_to_delete video

= paginate @collection.page(params[:page])

