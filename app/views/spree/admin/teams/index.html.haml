.toolbar
  %ul.actions
    %li#new_team_link
      = button_link_to 'New Team', new_object_url, { :remote => true, :icon => 'add', :id => 'admin_new_team' }
  %br.clear

%h1 Team

#new_team

%table.index#listing_team
  %tr
    %th Title
    %th Description
    %th Image
    %th Actions
  - @teams.each do |team|
    %tr
      %td= team.title
      %td= team.description.truncate(80)
      %td
        - unless team.images.empty?
          = image_tag(team.images.first.attachment.url(:small))
      %td.actions
        = link_to_edit team, :class => 'edit'
        &nbsp;
        = link_to_delete team

= paginate @collection.page(params[:page])

